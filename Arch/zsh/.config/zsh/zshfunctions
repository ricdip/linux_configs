# custom functions
function chpwd(){
    count=$(ll | wc -l);
    if [ "$count" -lt "30" ]; then
        ls;
    fi
    unset count
}

function fdvim(){
    fd $@ | vim -
}

function xclip-copy() {
    FILEMIME=$(file --mime-type -b "$1")
    xclip -selection clipboard -t "$FILEMIME" -i "$1" && echo "File '$1' $FILEMIME copied to clipboard"
    unset FILEMIME
}
